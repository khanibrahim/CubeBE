
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<body>

    <form>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" ng-model="user.username"/>

        </div>
        <div class="form-group">
            <label>Role</label>
            <select class="form-control" ng-model="user.roleName" required >
                <option value="">--Select Role--</option>
                <option value="Guest">Guest</option>
            </select>

        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" ng-model="user.email" />

        </div>

        <div class="form-group">
            <label>Password</label>
            <input class="form-control" ng-model="user.password" />

        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            <input class="form-control" ng-model="user.confirmPassword" />

        </div>
        <input type="submit" ng-click="register()" value="submit" />
    </form>
</body>
